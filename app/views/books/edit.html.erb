<h1>Books</h1>

<%= form_with model: @book do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
  
  
  <%= link_to "Show", book_path(@book.id) %>
　<%= link_to "Back", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>

<% end %>